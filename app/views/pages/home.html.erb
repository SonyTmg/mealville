<div class="hero" data-controller="slider">
  <div class="hero-text d-flex flex-column gap-4">
    <div class="d-flex flex-column gap-2">
      <%= image_tag 'mealville.svg', style: "width: 400px;" %>
      <p class="subtitle">Experience the food culture</p>
    </div>
    <div class="search-bar">
      <%= render 'shared/search_form' %>
    </div>
  </div>
  <div class="splide" data-slider-target="slider">
    <div class="splide__track">
      <ul class="splide__list">
        <li class="splide__slide">
          <%= image_tag 'slider-1' %>
        </li>
        <li class="splide__slide">
          <%= image_tag 'slider-2' %>
        </li>
        <li class="splide__slide">
          <%= image_tag 'slider-3' %>
        </li>
      </ul>
    </div>
  </div>

</div>

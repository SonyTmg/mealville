<div class="row" data-controller="showcase">
  <div class="col-12 col-lg-9">
    <%= cl_image_tag(@event.photos[0].key, crop: :fill, class: 'img-fluid w-100 img-event-show', data: {"showcase-target": "display"}) %>
  </div>
  <div class="col-12 col-lg-3 gap-2 d-flex flex-column">
    <%= @event.photos[0] && cl_image_tag(@event.photos[0].key, crop: :fill, class: 'img-fluid w-100 img-event-thumb', data: {"showcase-target": "thumb", "action": "mouseenter->showcase#feature"}) %>
    <%= @event.photos[1] && cl_image_tag(@event.photos[1].key, crop: :fill, class: 'img-fluid w-100 img-event-thumb', data: {"showcase-target": "thumb", "action": "mouseenter->showcase#feature"}) %>
    <%= @event.photos[2] && cl_image_tag(@event.photos[2].key, crop: :fill, class: 'img-fluid w-100 img-event-thumb', data: {"showcase-target": "thumb", "action": "mouseenter->showcase#feature"}) %>
    <%= @event.photos[3] && cl_image_tag(@event.photos[3].key, crop: :fill, class: 'img-fluid w-100 img-event-thumb', data: {"showcase-target": "thumb", "action": "mouseenter->showcase#feature"}) %>
  </div>
</div>

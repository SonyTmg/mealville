<div class="wrap bg-2">
  <div class="container my-5 pt-5">
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="row">
          <div class="col-12 col-lg-9">
            <%= cl_image_tag(@event.photos[0].key, crop: :fill, class: 'img-fluid w-100 img-event-show') %>
          </div>
          <div class="col-12 col-lg-3 gap-2 d-flex flex-column">
            <%= @event.photos[1] && cl_image_tag(@event.photos[1].key, crop: :fill, class: 'img-fluid w-100') %>
            <%= @event.photos[2] && cl_image_tag(@event.photos[2].key, crop: :fill, class: 'img-fluid w-100') %>
            <%= @event.photos[3] && cl_image_tag(@event.photos[3].key, crop: :fill, class: 'img-fluid w-100') %>
          </div>
        </div>
          <hr>
        <div class="row">
          <div class="col-12">
            <%= render 'host', host: @event.user %>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4 px-4 rounded-3">
        <div class="row flex-column">
          <div class="col-12 mb-3">
            <div class="row">
              <div class="col-12">
                <h1 class="fw-bold h2"><%= @event.name %></h1>
                <h3 class="h5">$ <%= @event.price %> AUD</h3>
              </div>
            </div>
          </div>
          <div class="col-12 mb-2">
            <div class="d-flex gap-4">
              <div class=""><i class="fa fa-map-marker-alt"></i> <%= @event.location %></div>
              <div class=""><i class="fa fa-calendar-alt"></i>  <%= @event.formatted_date %></div>
            </div>
          </div>
          <div class="col-12">
            <p>
              <i class="fa fa-clock"></i>  <%= @event.formatted_start_time %> to <%= @event.formatted_end_time %>
            </p>
          </div>
          <hr>
          <div class="col-12">
            <p class="fs-5">
              <%= @event.description %>
            </p>
          </div>
          <div class="col-12 d-flex justify-content-between">
            <p class="fs-5">
              <strong>Available seats:</strong> <%= @event.remaining_capacity %>
            </p>
            <p class="fs-5">
              <strong>Capacity: </strong> <%= @event.capacity %>
            </p>
          </div>
          <% unless @event.user_id == current_user&.id %>
            <div class="col-12 mb-5">
            <%= link_to 'Book Now', new_event_booking_path(@event), class: 'btn btn-lg btn-info'%>
              <%# simple_form_for [@event, @booking] do |f| %>
                <%# f.input :noguest, label: 'No. of guests' %>
                <%# f.association :event, as: :hidden %>
                <%# f.button :submit, class: 'btn btn-lg btn-info' %>
              <%# end %>
            </div>
          <% end %>
          <hr>
          <div style="width: 100%; height: 400px;"
            data-controller="mapbox"
            data-mapbox-markers-value="<%= @markers.to_json %>"
            data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

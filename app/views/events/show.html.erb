<%#= each detail of the event listing %>
<div class="wrap bg-2">
  <div class="container my-5 pt-5">
    <div class="row">
      <div class="col-12">
        <h1 class="fw-bold text-white"><%= @event.name %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="row">
          <div class="col-12 col-lg-9">
            <%# <img src="<%= url_for(@event.photos[0]) " alt="" class="img-fluid img-object-fit-cover"> %> %>
            <%= cl_image_tag(@event.photos[0].key, crop: :fill) %>
            <%# class: "img-fluid img-object-fit-cover") %>
          </div>
          <div class="col-12 col-lg-3 gap-2 d-flex flex-column">
            <%= cl_image_tag(@event.photos[1].key, crop: :fill) %>
            <%= cl_image_tag(@event.photos[2].key, crop: :fill) %>
            <%= cl_image_tag(@event.photos[3].key, crop: :fill) %>
          </div>
        </div>
        <div style="width: 100%; height: 600px;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
        </div>
      </div>
      <div class="bg-dark bg-opacity-25 border border-1 col-12 col-lg-4 p-4 rounded-3 text-white">
        <div class="row flex-column">
          <div class="col-12">
            <div class="row">
              <div class="col-12">
                <p class="h2 text-center">
                  $<%= @event.price %>AUD
                </p>
              </div>
              <div class="col-12 text-center">
                ⭐️⭐️⭐️⭐️
              </div>
            </div>
          </div>
          <div class="col-12">
            <p>
              <%= @event.location %>
            </p>
          </div>
          <div class="col-12">
            <p>
              <%= @event.description %>
            </p>
          </div>
          <div class="col-12">
            <p>
              <%= @event.formatted_date %>
            </p>
          </div>
          <div class="col-12">
            <p>
              <%= @event.formatted_start_time %>
            </p>
          </div>
          <div class="col-12">
            <p>
              <%= @event.formatted_end_time %>
            </p>
          </div>
          <div class="col-12">
            <p>
              Max guest: <%= @event.capacity %>
            </p>
          </div>
          <div class="col-12">
            <p>
            <%# Available number of seats: <%= @event.remaining_capacity %>
            </p>
          </div>
            <div class="col-12">
              <%= simple_form_for [@event, @booking] do |f| %>
                <%= f.input :noguest%>
                <%= f.association :event, as: :hidden %>
                <%= f.button :submit, class: 'btn-ssubmit' %>
              <% end %>
            </div>
          <br>
          <br>
          <hr>
          <div class="row">
            <div class="col-12">
             Hosted by: <%= @event.user.name %>
              <%= @event.user.average_rating %>
              <%= link_to 'See more', profile_path(id: @event.user_id)%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

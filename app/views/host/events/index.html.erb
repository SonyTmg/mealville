<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between">
      <h3 class="">My Events</h3>
      <%= link_to 'Create an event', new_host_event_path, class:"btn btn-primary" %>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Date</th>
              <th scope="col">Price</th>
              <th scope="col">Capacity</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.id %></td>
              <td><%= event.name %></td>
              <td><%= event.date %></td>
              <td><%= event.price %></td>
              <td><%= event.capacity %></td>
              <td>
                <%= link_to 'Edit', edit_host_event_path(id: event.id) %>
                <%= link_to 'Delete', host_event_path(id: event.id), method: :delete, class: 'text-danger', data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

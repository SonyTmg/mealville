<%= simple_form_for [:host, @event] do |f| %>
  <%= f.input :name %>
  <%= f.input :cuisine %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :capacity %>
  <%= f.input :location,
              input_html: { data: { geocoder_target: "address" }, class: 'd-none' },
              wrapper_html: { data: { controller: "geocoder",
              geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :start_time, html5: true %>
  <%= f.input :end_time, html5: true %>
  <%= f.input :date,  html5: true %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit , class: 'btn btn-success text-white'%>
<% end %>
